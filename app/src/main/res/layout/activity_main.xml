<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sunh.dayup.MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/appCompatButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="12121"
        android:textColor="@color/colorAccent"
        android:theme="@style/MyButtonTheme" />
    <!--
            修改button背景色
            style="@style/Widget.AppCompat.Button.Colored"
            android:theme="@style/MyButtonTheme"-->
    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/btn_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="actionbar"
        android:text="ActionBar" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/btn_drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="DrawerLayout"
        android:text="DrawerLayout" />

    <Button
        android:id="@+id/btn_viewpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ViewPaper"
        android:text="ViewPaper" />
    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:onClick="tablayout"
        android:text="tablayout"
        android:textColor="@color/colorAccent"
        android:theme="@style/MyButtonTheme" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:onClick="CoordinatorLayout"
        android:text="CoordinatorLayout"
        android:textColor="@color/colorAccent"
        android:theme="@style/MyButtonTheme" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom|right"
        android:layout_margin="15dp"
        android:onClick="floatingActionButton"
        android:src="@mipmap/ic_launcher_round"
        app:borderWidth="0dp"
        app:backgroundTint="#ff87ffeb"
        app:rippleColor="#33728dff"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />
</LinearLayout>
